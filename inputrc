set bell-style none
set meta-flag On
set input-meta On
set output-meta On
set convert-meta Off
set horizontal-scroll-mode On   # scroll long command lines
set show-all-if-ambiguous On    # after TAB is pressed
set completion-ignore-case On
set expand-tilde On
set visible-stats On
set mark-modified-lines On
set mark-directories On
 
# Home Key
"\e[7~":beginning-of-line

# End Key
"\e[8~":end-of-line

# Delete Key
"\e[3~":delete-char
 
"\e[1~": beginning-of-line
"\e[4~": end-of-line
"\e[5~": beginning-of-history
"\e[6~": end-of-history
"\e[2~": quoted-insert
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word
 
# have up / down arrows contect sensitive, i.e.
# if there is already text at the prompt, it will
# only search history begining with that text
"\e[B": history-search-forward
"\e[A": history-search-backward
 
$if Bash
  Space: magic-space
$endif
